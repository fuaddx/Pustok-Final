@model PaginatonVM<IEnumerable<CategoryListItemVM>>
@{
    ViewData["Title"] = "Index";
}

@section scripts {
    <script>
        $("#dataTable").on("click","#prod-pag a",function(ev){
            ev.preventDefault();
            fetch($(this).attr("href"))
            .then(res=>res.text())
            .then(data=>$("#dataTable").html(data))
        })
    </script>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Category</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body " id="dataTable">
       <partial model="Model" name="_ProductPaginationPartial" />
    </div>
</div>