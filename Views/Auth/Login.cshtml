<body>
	<div class="site-wrapper" id="top">
		<section class="breadcrumb-section">
			<h2 class="sr-only">Site Breadcrumb</h2>
			<div class="container">
				<div class="breadcrumb-contents">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
							<li class="breadcrumb-item active">Login</li>
						</ol>
					</nav>
				</div>
			</div>
		</section>
		<!--=============================================
		=            Login Register page content         =
		=============================================-->

		<main class="page-section inner-page-sec-padding-bottom">
			<div class="container">
				<div class="row" style="justify-content:center">
					<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
						<form method="post">
							<div class="login-form">
								<h4 class="login-title">Returning Customer</h4>
								<p><span class="font-weight-bold">I am a returning customer</span></p>
								<div class="row">
									<div class="col-md-12 col-12 mb--15">
										<label asp-for="UsernameOrEmail">Enter your email address or username here...</label>
										<input class="mb-0 form-control" type="text" asp-for="UsernameOrEmail"
											   placeholder="Enter you email address here...">
										<span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
									</div>
									<div class="col-12 mb--20">
										<label asp-for="Password">Password</label>
										<input class="mb-0 form-control" type="password" asp-for="Password" placeholder="Enter your password">
										<span class="text-danger" asp-validation-for="Password"></span>
									</div>
									<div class="form-group">
										<div class="custom-control custom-checkbox small">
											<input class="custom-control-input" asp-for="IsRemember">
											<label class="custom-control-label" asp-for="IsRemember">
												Remember
												Me
											</label>
										</div>
									</div>
									<div class="col-md-12">
										<div class="text-danger" asp-validation-summary="ModelOnly"></div>
										<button type="submit" class="btn btn-outlined">Login</button>
									</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>


	</div>


	<!-- Use Minified Plugins Version For Fast Page Load -->
	<script src="~/assets/js/plugins.js"></script>
	<script src="~/assets/js/ajax-mail.js"></script>
	<script src="~/assets/js/custom.js"></script>
</body>


